@{
}

@model List<EntityType>

<table id="TypeTable">
    <tr>
        <th>Название</th>
    </tr>
    @foreach(var item in Model)
    {
        <tr>
            <th>@item.Name</th>
            <th><a asp-action="Index" asp-controller="EntityValues" asp-route-id="@item.Id" >Перейти к справочнику</a></th>
        </tr>

    }
</table>


<h4>Добавить справочник</h4>
<form>
    <label>Название</label>
    <input type="text" name="listname" id="listid" />
    <input type="button" onclick="AddType()" value="Добавить" />
</form>

@section scripts{
    <script src="~/js/jquery-2.2.0.min.js"></script>
    <script src="~/js/jquery.signalr-2.2.0.min.js"></script>
    <script src="/signalr/hubs"></script>
    <script src="~/js/EntityTypesJs.js"></script>
}