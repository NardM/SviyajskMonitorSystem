@model SviyajskMonitorSystem.Models.Person

@{
    ViewData["Title"] = "Create";
}


<form asp-action="Create">
    <div class="form-horizontal">
        <h4>Исследователь</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="">
          <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
            <input class="mdl-textfield__input" asp-for="Name" type="text" required="required" id="sample3">
            <label asp-validation-for="Name" class="mdl-textfield__label" for="sample3">Имя</label>
          </div>
        </div>

        <div class="">
          <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                <input asp-for="Surname" class="mdl-textfield__input" asp-for="Name" type="text" required="required" id="sample3">
                <label asp-validation-for="Surname" asp-validation-for="Name" class="mdl-textfield__label" for="sample3">Фамилия</label>
          </div>
        </div>



        <div class="">
            <div class="col-md-offset-2 col-md-10">
                <input style="background:#3F51B5" class="btn btn-info" type="submit" value="Создать"   />
            </div>
        </div>

    </div>
</form>

<div>
    <a asp-action="Index" style="color:#3F51B5">Назад</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
